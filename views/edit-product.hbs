<div class="w-75 mx-auto">
  <p class="fs-1">Edit product</p>
  <form action="/edit-product/{{product._id}}" method="post">
    {{#if editProductError}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <strong>Error!</strong>
      {{editProductError}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    <div class="form-floating mb-3">
      <input name="title" type="text" class="form-control" id="floatingInput" placeholder="Title"
        value="{{product.title}}" />
      <label for="floatingInput">Title</label>
    </div>
    <div class="form-floating mb-3">
      <textarea class="form-control" name="description" placeholder="Description..." id="floatingTextarea2"
        style="height: 200px">{{product.description}}</textarea>
      <label for="floatingTextarea2">Description</label>
    </div>
    <div class="form-floating mb-3">
      <input name="image" type="text" class="form-control" id="floatingInput" placeholder="Image"
        value="{{product.image}}" />
      <label for="floatingInput">Image</label>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text">$</span>
      <div class="form-floating">
        <input type="number" name="price" class="form-control" id="floatingInputGroup1" placeholder="Price"
          value="{{product.price}}">
        <label for="floatingInputGroup1">Price</label>
      </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Edit product</button>
  </form>
</div>