{{#if myProducts}}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
  {{#each myProducts}}
  <div class="col">
    <div class="card shadow-sm overflow-hidden">
      <img src="{{image}}" alt="img" <img src="{{image}}" alt="img"
        style="width: 100%; height: 240px; object-fit: cover;">
      <div class="card-body">
        <p class="card-text fw-bold">{{title}}</p>
        <p style="display: -webkit-box;  -webkit-line-clamp: 6;  -webkit-box-orient: vertical;  overflow: hidden;"
          class="card-text">{{description}}</p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="avatar bg-primary text-white">{{getFullName user.firstName user.lastName}}</div>
          <small class="text-body-secondary fs-5">{{price}}.00 $</small>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<p>No product</p>
{{/if}}